# Azure Cosmos DB
COSMOS_DB_ENDPOINT=your-cosmos-db-endpoint
COSMOS_DB_KEY=your-cosmos-db-key

# Azure SignalR
SIGNALR_CONNECTION_STRING=your-signalr-connection-string

# SignalR client URL for negotiation endpoint
SIGNALR_URL=https://your-signalr-service.service.signalr.net/client/?hub=chat

# JWT secret for backend authentication
JWT_SECRET=your_jwt_secret_here

# SignalR access token (if not using connection string)
SIGNALR_ACCESS_TOKEN=

# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=https://yourfrontend.com
